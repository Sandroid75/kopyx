{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-std=gnu17",
				"-Wall",
				"-O3",
				"-fdiagnostics-color=always",
				//"-ggdb",
				//"-DDEBUG=1",
				"${workspaceFolder}/src/*.c",
				"-o",
				"${workspaceFolder}/kopyx"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}