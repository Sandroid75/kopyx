{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/lib64/ccache/gcc",
			"args": [
				"-std=gnu17",
				"-Wall",
				"-O0",
				"-fdiagnostics-color=always",
				"-ggdb",
				"${fileDirname}/*.c",
				"-o",
				"${fileDirname}/kopyx",
				"-L../findfirst/",
				"-lfindfirst"
				//"-L../findfirst/"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/lib64/ccache/gcc"
		}
	]
}